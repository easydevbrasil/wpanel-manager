# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application Configuration
NODE_ENV="production"
PORT=8000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public&sslmode=disable"
POSTGRES_HOST=127.0.0.1
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_DB=wpanel
POSTGRES_PORT=5432

# Session Security
SESSION_SECRET="your_random_session_secret_key_here"

# Mail Configuration
POSTFIX_MAIL_ACCOUNTS_FILE="/docker/config/postfix-accounts.conf"

# Nginx Configuration
NGINX_HOSTS_DIR=/docker/nginx/hosts

# Cloud Storage (ProtonDrive)
PROTONDRIVE_INSTANCE="protondrive"
PROTON_CONFIG_FILE="/docker/config/rclone.conf"

# Payment Integration (Asaas Bank)
ASAAS_WALLET_ID=your_asaas_wallet_id_here
ASAAS_API_KEY=your_asaas_api_key_here

# SSL/TLS Configuration
SSL_CERT_PATH=/docker/ssl/certs
SSL_KEY_PATH=/docker/ssl/private

# API Keys (if needed)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
CLOUDFLARE_EMAIL=your_email@domain.com

# Webhook URLs
WEBHOOK_SECRET=your_webhook_secret
NOTIFICATION_WEBHOOK=https://your-webhook-url.com/notify

# Docker Configuration
DOCKER_SOCKET_PATH=/var/run/docker.sock

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key
BACKUP_STORAGE_PATH=/docker/backups

# Monitoring
HEALTH_CHECK_URL=https://your-monitoring-service.com/ping
LOG_LEVEL=info